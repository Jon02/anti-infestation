<?xml version="1.0" encoding="UTF-8" ?>

<Defs>

	<HediffDef>
    <defName>PsychicWave</defName>
    <label>psychic wave</label>
    <description>test</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.9, 1.0, 0.7)</defaultLabelColor>
    <makesSickThought>false</makesSickThought>
    <scenarioCanAdd>false</scenarioCanAdd>
    <stages>
      <li>
        <label>initial</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>initial</label>
        <minSeverity>0.05</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.20</offset>
          </li>
		  <li>
            <capacity>Moving</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.25</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.40</offset>
          </li>
		  <li>
		  <capacity>Moving</capacity>
            <offset>-0.30</offset>
			</li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.50</minSeverity>
        <vomitMtbDays>5</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.60</offset>
          </li>
		  <li>
		  <capacity>Moving</capacity>
            <offset>-0.40</offset>
			</li>
        </capMods>
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.70</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.90</offset>
          </li>
        </capMods>
    
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.80</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.10</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

</Defs>